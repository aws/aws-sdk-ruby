  spec.add_dependency('{{gem}}')
  {{/version}}
  {{/dependencies}}

  spec.required_ruby_version = '>= 2.5'
  {{#deprecated?}}
  spec.post_install_message = '*** {{gem_name}} is deprecated ***'
  {{/deprecated?}}
